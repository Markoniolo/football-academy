mixin share(mod)
  section.share.js-white-section
    .share__cont.cont
      .share__area
        //img.share__image-left(src=staticImg('share/left.png') alt='')
        //img.share__image-right(src=staticImg('share/right.png') alt='')
        img.share__image-ball(src=staticImg('share/ball.png') alt='')
        .share__box
          h1.share__title.h1 Football Pro Academy
          .share__text.h5 let's bring up a new champion
          if mod === 'events'
            button.share__sign-up.btn-black.js-open-popup(type='button') sign up for an event
        .share__box
          if mod === 'events'
            .share__headline.h5 Share event:
            .share__note.p2 share the event on social media
          else
            .share__headline.h5 Share news:
            .share__note.p2 share the news on social media
          .share__social
            a.share__social-item.share__social-item_fb.btn(href="https://twitter.com/share?url=<?php the_permalink(); ?>&text=<?php the_title(); ?>&hashtags=my_hashtag")
            a.share__social-item.share__social-item_tw.btn(href="https://www.facebook.com/sharer.php?u=<?php the_permalink(); ?>&t=<?php the_title(); ?>" class="share-link share-link--facebook")
